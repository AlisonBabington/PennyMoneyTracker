<h1>Tags</h1>

<ul>
  <% for tag in @tags %>
  <form method="get" action="tags/<%= tag.id %>">
    <input id= "tag_button" type="submit" value="<%= tag.name %>" name ="<%= tag.name %>" />
  </form>
<% end %>
</ul>

<form method="post" action="/tags">
    <label for="name">Name:</label>
    <input id="name-field" type="text" name="name" />

    <input type='submit' value="Add Tag"/>
</form>
