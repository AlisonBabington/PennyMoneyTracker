<h2>Edit Account <%= @account.id %></h2>

<form action="/accounts/<%= @account.id %>" method= "POST">
  <label for="user-first_name">First Name:</label>
  <input type="text" name="first-name"
  id="user-first-name-field" value="<%= @account.owner_first_name %>"
  />

  <label for="user-last-name">Surname:</label>
  <input type="text" name="surname"
  id ="user-surname-field" value="<%= @account.owner_last_name%>"
  />

  <label for="balance">Balance:</label>
  <input
  type="text"
  name="balance"
  id="balance-field"
  value="<%= @account.balance %>"
  />

  <input type='submit' value="Edit Account">
</form>
