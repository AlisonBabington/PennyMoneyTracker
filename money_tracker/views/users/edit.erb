<h2>Edit User <%= @user.id %></h2>

<form action="/users/<%= @user.id %>" method= "POST">
  <label for="user-first_name">First Name:</label>
  <input type="text" name="first-name"
  id="user-first-name-field" value="<%= @user.owner_first_name %>"
  />

  <label for="user-last-name">Surname:</label>
  <input type="text" name="surname"
  id ="user-surname-field" value="<%= @user.owner_last_name%>"
  />

  <label for="budget">Budget:</label>
  <input
  type="text"
  name="monthly_budget"
  id="monthly_budget"
  value="<%= @user.monthly_budget %>"
  />

  <input type='submit' value="Edit User">
</form>
